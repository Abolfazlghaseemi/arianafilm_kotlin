<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_solid_dark_gray_10"
    android:padding="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView17"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_circle_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/estedad_light"
        android:gravity="right"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView17"
        tools:text="نام کاربری" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_user_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/estedad_medium"
        android:gravity="right"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_username"
        tools:text="نظر کاربر" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_admin_replay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_rect_solid_gray_10_0_10_10"
        android:ellipsize="end"
        android:fontFamily="@font/estedad_medium"
        android:gravity="right"
        android:maxLines="3"
        android:padding="6dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_comment"
        tools:text="پاسخ ادمین"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>